package kr.java.chapter3;

import java.util.Scanner;

public class TTest1 {
public static void main(String[] args) {
	Scanner s = new Scanner(System.in);
	
	System.out.println("수 입력: ");

	int num = s.nextInt();
	int sum = 0;
	int a = 0;
	
	for(int i = 0; i <= num; i++)
	{
		if(i % 2 == 1)

		{
			sum += i;
			a ++;
		}
	}
	System.out.println("수 : " + a);
	System.out.println("합 : " + sum);

	}


}
